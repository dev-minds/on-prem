{
    "variables": {
        "ami_name": "base_infra_ami_{{timestamp}}.img",
        "builder_name": "",
        "builder_type": "",
        "acct_owner": "",
        "aws_region": "",
        "src_ami":  ""
    },

    "builders": [{
        "name": "{{user `builder_name`}}",
        "type": "amazon-ebs",
        "region": "{{user `aws_region`}}",
        "vpc_id": "{{user `vpc`}}",
        "subnet_id": "{{user `subnet`}}",
        "ami_description": "{{user `builder_ami_desc`}}",
        "associate_public_ip_address": "{{user `builder_ip_assoc`}}",

        "source_ami_filter": {
          "filters": {
            "virtualization-type": "hvm",
            "name": "management-box-ami-v0.8",
            "root-device-type": "ebs"
          },
          "owners": ["023451010066"],
          "most_recent": true
        },

        "instance_type": "t2.micro",
        "ssh_username": "centos",
        "ami_name": "{{user `ami_name`}}",
        "launch_block_device_mappings": [{
            "device_name": "/dev/sda1",
            "volume_size": 25,
            "volume_type": "gp2",
            "delete_on_termination": true
        }],

        "tags": {
          "Name": "{{user `ami_name`}}"
        },
        "run_tags": {
          "Name": "{{user `ami_name`}}"
        },
        "run_volume_tags": {
          "Name": "{{user `ami_name`}}"
        },
        "snapshot_tags": {
          "Name": "{{user `ami_name`}}"
        }
      }],

      "provisioners": [{
          "type": "shell",
          "inline": [
            "sudo pip install ansible==2.7.9"
          ]
        },
        {
          "type": "ansible-local",
          "playbook_file": "./ansible/playbook.yaml",
          "role_paths": [
            "./ansible/roles/common"
          ],
          "playbook_dir": "./ansible",
          "galaxy_file": "./ansible/requirements.yaml"
        },
        {
          "type": "shell",
          "inline": [
            "rm .ssh/authorized_keys ; sudo rm /root/.ssh/authorized_keys"
          ]
        }
      ]
}